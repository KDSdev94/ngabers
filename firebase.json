{
    "functions": {
        "source": ".",
        "codebase": "default",
        "ignore": [
            "node_modules",
            ".git",
            "client",
            "dist/public",
            "attached_assets"
        ]
    },
    "hosting": {
        "public": "dist/public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "api"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}